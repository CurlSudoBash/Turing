{% extends 'templates/app.twig' %}

{% block content %}
    <div class="row">
    	<div class="col-md-12">
    		<div class="panel panel-headline">
    			<div class="panel-heading">Election Registration</div>
    			<div class="panel-body">

					<div class="form-group">
						<label for="title">Election Name</label>

						<div class="input-group">
							<span class="input-group-addon"><i class="fa fa-user"></i></span>
							<input class="form-control voter-firstname" placeholder="General election" name="firstname" type="text">
						</div>
					</div>

					<div class="form-group">
						<label for="title">Registration phase onset</label>

						<div class="input-group">
							<span class="input-group-addon"><i class="fa fa-user"></i></span>
							<input class="form-control voter-lastname" placeholder="" name="lastname" type="text">
						</div>
					</div>

    					<div class="form-group">
							<label for="title">Email</label>

							<div class="input-group">
								<span class="input-group-addon"><i class="fa fa-envelope-o"></i></span>
								<input class="form-control voter-email" placeholder="voter@gmail.com" name="email" type="email" />
							</div>
    					</div>

						<div class="form-group">
							<label for="vote_id">Vote For</label>
							<select class="form-control vote-id" name="vote_id" id="vote_id">
								{% for item in data %}
									<option value="{{ item.id }}">{{ item.title }}</option>
                                {% else %}
									<option>Please add a vote first</option>
                                {% endfor %}
							</select>
						</div>
						<button type="submit" class="btn btn-primary btn-email">Send An Email</button>

    			</div>
    		</div>
    	</div>
    </div>
{% endblock %}